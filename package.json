{
  "name": "ace-ops",
  "version": "1.0.0",
  "description": "This package contains the backend code for ACE-club's main site and admin panel",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc && tsc-alias",
    "start": "",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate:pg",
    "db:clear": "drizzle-kit drop",
    "db:studio": "npx prisma studio",
    "db: reset": "npx prisma migrate reset && yarn db:seed",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IAmRiteshKoushik/ace-ops.git"
  },
  "keywords": [
    "ace"
  ],
  "author": "Ritesh Koushik, Nandagopal Nair, Adharsh, Shrish Kumar Lohchab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IAmRiteshKoushik/ace-ops/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,md,mdx,css}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "db/seed.ts"
  },
  "homepage": "https://github.com/IAmRiteshKoushik/ace-ops#readme",
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "otp-generator": "^4.0.1",
    "paseto": "^3.1.4",
    "postgres": "^3.4.4",
    "prisma": "^5.19.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/helmet": "^4.0.0",
    "@types/nodemailer": "^6.4.15",
    "@types/otp-generator": "^4.0.2",
    "@types/pg": "^8.11.6",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^11.0.6",
    "drizzle-kit": "^0.22.7",
    "husky": "^9.1.6",
    "nodemailer": "^6.9.14",
    "pinst": "^3.0.0",
    "typescript": "^5.5.2"
  }
}
